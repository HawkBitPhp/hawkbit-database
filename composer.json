{
  "name": "hawkbit/database",
  "description": "Object orientated database handling",
  "keywords": [
    "doctrine",
    "orm",
    "persistence",
    "hawkbit"
  ],
  "homepage": "https://github.com/HawkBitPhP",
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Bunge",
      "email": "marco_bunge@web.de"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "doctrine/dbal": "~2.5",
    "doctrine/inflector": "~1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.8"
  },
  "autoload": {
    "psr-4": {
      "Hawkbit\\Database\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hawkbit\\Database\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "cd vendor/phpunit/phpunit",
      "phpunit --configuration phpunit.xml"
    ]
  }
}
